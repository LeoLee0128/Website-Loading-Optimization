{%- comment -%}
----------------------------------------------------------------------------------------------------------------------
PRICE RANGE
----------------------------------------------------------------------------------------------------------------------

Create a price range selector (used in product faceting)

********************************************
Supported variables
********************************************

* filter: the filter object to use
* layout: can be "stack" (default) or "inline"
{%- endcomment -%}

{%- liquid
  assign min_value = filter.min_value.value | default: 0.0 | divided_by: 100.0
  assign max_value = filter.max_value.value | default: filter.range_max | divided_by: 100.0
  assign range_max = filter.range_max | divided_by: 100.0 | ceil
  assign lower_bound_progress = min_value | divided_by: range_max | times: 100.0
  assign higher_bound_progress = max_value | divided_by: range_max | times: 100.0
-%}

<price-range class="perf-opt price-range {% if layout == 'inline' %}price-range--inline{% endif %}">
  {%- capture range_group -%}
    <div class="perf-opt range-group" style="--range-min: {{ lower_bound_progress }}%; --range-max: {{ higher_bound_progress }}%">
      <input type="range" aria-label="{{ 'collection.faceting.price_filter_from' | t }}" class="perf-opt range" min="0" max="{{ range_max | ceil }}" value="{{ min_value | ceil }}">
      <input type="range" aria-label="{{ 'collection.faceting.price_filter_to' | t }}" class="perf-opt range" min="0" max="{{ range_max | ceil }}" value="{{ max_value | ceil }}">
    </div>
  {%- endcapture -%}

  {%- capture input_from -%}
    <label class="perf-opt input-prefix text-sm">
      <span class="perf-opt prefix text-subdued">{{ cart.currency.symbol }}{% if settings.currency_code_enabled %}{{ cart.currency.iso_code }}{% endif %}</span>
      <input aria-label="{{ 'collection.faceting.price_filter_from' | t }}" class="perf-opt field" type="number" inputmode="numeric" {% if filter.min_value.value %}value="{{ min_value | ceil }}"{% endif %} name="{{ filter.min_value.param_name }}" id="{{ filter.min_value.param_name }}" min="0" max="{{ max_value | ceil }}" placeholder="0" autocomplete="off">
    </label>
  {%- endcapture -%}

  {%- capture input_to -%}
    <label class="perf-opt input-prefix text-sm">
      <span class="perf-opt prefix text-subdued">{{ cart.currency.symbol }}{% if settings.currency_code_enabled %}{{ cart.currency.iso_code }}{% endif %}</span>
      <input aria-label="{{ 'collection.faceting.price_filter_to' | t }}" class="perf-opt field" type="number" inputmode="numeric" {% if filter.max_value.value %}value="{{ max_value | ceil }}"{% endif %} name="{{ filter.max_value.param_name }}" id="{{ filter.max_value.param_name }}" min="{{ min_value | ceil }}" max="{{ range_max | ceil }}" placeholder="{{ range_max | ceil }}" autocomplete="off">
    </label>
  {%- endcapture -%}

  {%- if layout == 'inline' -%}
    {{- input_from -}}
    {{- range_group -}}
    {{- input_to -}}
  {%- else -%}
    {{- range_group -}}

    <div class="perf-opt input-group">
      {{- input_from -}}
      <span class="perf-opt text-subdued text-sm">{{ 'collection.faceting.price_range_to' | t }}</span>
      {{- input_to -}}
    </div>
  {%- endif -%}
</price-range>