<style>
.rich_imagetext{
    background: #F6F6F6;
    padding-top:223px;
    padding-bottom:100px
}
.rich_imagetext_head h2 {
    font-size: 66px;
    line-height: 72px;
    margin: 0;
    font-weight: 600;
    color: #181818;
}
.rich_imagetext_head p{
        max-width: 810px;
    margin: 0;
    color: rgba(24, 24, 24, 0.5);
    font-size: 25px;
    line-height: 28px;
    margin-top: 40px;
}
.rich_imagetext_head {
    max-width: 822px;
    text-align: center;
    margin: 0 auto 76px;
}
  @media (max-width: 1442px){
.rich_imagetext {
       padding-bottom: 40px;
}
}
@media(max-width:768px){
  .rich_imagetext {
    padding-top: 90px;
          padding-bottom: 29px;
}
  .rich_imagetext_head h2 {
    font-size: 40px;
    line-height: 40px;
}
.rich_imagetext_head p {
    max-width: 100%;
    font-size: 17.5px;
    line-height: 20px;
    margin-top: 28px;
}
.rich_imagetext-wrapper {
    border-radius: 8px;
    overflow: hidden;
}
.rich_imagetext_head {
    max-width: 100%;
    margin: 0 auto 28px;
}
}
</style>

<section class="perf-opt rich_imagetext sec-{{ section.id }}" id="{{ section.settings.custom_id }}">
    <div class="perf-opt container">
        <div class="perf-opt rich_imagetext_head">
            <h2 class="perf-opt space-thin wow fadeInUp">{{ section.settings.title }}</h2>
            <p class="perf-opt space-thin  wow fadeInUp">{{ section.settings.desc }}</p>
        </div>
        <div class="perf-opt rich_imagetext-wrapper">
            <img class="perf-opt desktop-img" src="{{ section.settings.image | img_url:'master' }}">
            <img class="perf-opt mobile-img" src="{{ section.settings.mobile_image | img_url:'master' }}">
        </div>
    </div>
</section>
{% schema %}
{
  "name": "Rich image",
  "settings": [
    {
      "type": "text",
      "id": "custom_id",
      "label": "ID"
    },
     {
      "type": "text",
      "id": "title",
      "label": "title"
    },
    {
      "type": "text",
      "id": "desc",
      "label": "desc"
    },
   
    {
      "type": "image_picker",
      "id": "image",
      "label": "image"
    },
      {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "mobile image"
    }
    
    
   
  ],
  "presets": [
    {
      "name": "Rich image"
    }
  ]
}
{% endschema %}