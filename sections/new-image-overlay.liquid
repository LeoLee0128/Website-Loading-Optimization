<style>
    .overlay_wrapper {
    position: relative;
}
.overlay_wrapper:after {
    content: '';
    background: rgba(24, 24, 24, 0.2);
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}
.new_overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    display: flex;
    flex-flow: column;
    align-items: center;
    justify-content: center;
    z-index: 1;
    color: #fff;
}
.overlay_subtitle{
    font-size: 36px;
    line-height: 38px;
    font-family:var(--font-regular-family);
font-weight: var(--font-regular-weight);
font-style: var(--font-regular-style);
}
.overlay_wrapper video{
height:1000px;
    object-fit: cover;
}
.overlay_title{
    font-size: 94.45px;
    line-height: 103.51px;
      margin: 23.5px 0 57.5px;
        font-weight: 600;
}
.overlay_btn{
    width: 132px;
    height: 45px;
    border-radius: 50px;
    background: rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(15px);
    color: #fff;
    font-size: 17.18px;
    line-height: 1;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    font-family:var(--font-regular-family);
font-weight: var(--font-regular-weight);
font-style: var(--font-regular-style);
   transition: all .4s ease;
}
.overlay_btn:hover{
    background:#2AACE6
}

 @media (max-width: 768px) {
.overlay_title {
    font-size: 38px;
    line-height: 39px;
          margin: 14px 0 27px;
  }
  .overlay_subtitle {
    font-size: 21px;
    line-height: 19px;
  }
  .overlay_wrapper:after{
    display:none
  }
  .new_overlay {
    justify-content: flex-end;
    padding-bottom: 72px;
}
.overlay_wrapper video{
    height: 590px;
    object-fit: cover;
  }
}
</style>
<section class="overlay-section">
    <div class="container_full">
        <div class="overlay_wrapper">
           {% comment %} <img class="desktop-img" src="{{ section.settings.image | img_url:'master' }}" />
           <img class="mobile-img" src="{{ section.settings.m_image | img_url:'master' }}" /> {% endcomment %}
             <video autoplay muted playsinline loop preload="metadata" poster="{{ section.settings.poster | image_url: width: 2000 }}">
        <source src="{{ section.settings.video_mp4_url}}" type="video/mp4">
      </video>
          <div class="new_overlay">
            <div class="overlay_subtitle wow fadeInUp">{{ section.settings.subtitle }}</div>
            <h2 class="overlay_title wow fadeInUp">{{ section.settings.title | newline_to_br }}</h2>
            <a href="{{ section.settings.link}}" class="overlay_btn">Learn more</a>
          </div>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "New image text overlay",
  "settings": [
     { 
            "type": "image_picker", 
            "id": "image", 
            "label": "Pc image" 
        },
         { 
            "type": "image_picker", 
            "id": "m_image", 
            "label": "Mobile image" 
        },
         { 
            "type": "text", 
            "id": "video_mp4_url", 
            "label": "video url" 
        },
        
         {
          "type": "text",
          "id": "subtitle",
          "label": "subtitle"
        },
        {
          "type": "textarea",
          "id": "title",
          "label": "title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "link"
        }
   
  ],
  
  "presets": [
    {
      "name": "New image text overlay"
    }
  ]
}
{% endschema %}