            "label": "banner" 
        },
         { 
            "type": "image_picker", 
            "id": "banner_m", 
            "label": "banner mobile" 
        },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "desc",
      "label": "Subtitle"
    },
     {
      "type": "text",
      "id": "i_title",
      "label": "slider title"
    }
   
    
  ],
   "blocks": [
    {
      "type": "item",
      "name": "item",
      "settings": [
        { 
            "type": "image_picker", 
            "id": "image", 
            "label": "image" 
        }
      
      ]
    }
  ],
