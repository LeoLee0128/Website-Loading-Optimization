<style>
.power_grid-section {
    background: #F6F6F6;
    padding: 146px 0 0;
    border-radius: 100px 100px 0 0;
}
.power_grid-list {
    display: flex;
    align-items: center;
    gap: 46px;
    max-width: 1320px;
    margin: 0 auto;
}
.power_grid-item{
    position:relative
}
.power_grid-content{
    position: absolute;
    top: 45px;
    left: 0;
    width: 100%;
    text-align: center;
}
.power_grid-content h2{
    margin: 0;
    font-size: 46px;
    line-height: 1;
}
.power_grid-content p{
    margin: 0;
    color: rgba(24, 24, 24, 0.5);
    font-size: 25px;
    line-height: 28px;
    margin-top: 20px;
}
.power_grid-title{
    font-size: 66px;
    line-height: 72px;
    font-weight: 600;
    margin: 0 auto 109px;
    max-width: 551px;
    text-align: center;
}
@media (max-width: 768px){
.power_grid-section {
          margin-top: 60px;
    padding: 69px 0 0;
    border-radius: 35px 35px 0 0;
}
.power_grid-title {
    font-size: 40px;
    line-height: 40px;
    margin: 0 auto 38px;
  }
  .power_grid-list {
    gap: 53px;
    max-width: 100%;
    flex-flow: column;
}
.power_grid-content h2 {
    font-size: 28px;
    line-height: 30px;
}
.power_grid-content p {
    font-size: 17.5px;
    line-height: 20px;
    margin-top: 15px;
}
}
</style>

<section class="power_grid-section">
  <div class="container">
    <h2 class="power_grid-title space-thin wow fadeInUp">{{ section.settings.title }}</h2>
    <div class="power_grid-list">
         {% for block in section.blocks %}
            <div class="power_grid-item">
                    <img src="{{ block.settings.image | img_url:'master' }}">
                    <div class="power_grid-content">
                        <h2 class="space-thin wow fadeInUp">{{ block.settings.i_title }}</h2>
                        <p class="space-thin wow fadeInUp">{{ block.settings.i_desc }}</p>
                    </div>
            </div>
        {% endfor %}
    </div>
  </div>
</section>




{% schema %}
{
  "name": "Two grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    
  ],
  "blocks": [
    {
      "type": "item",
      "name": "item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
      "type": "text",
      "id": "i_title",
      "label": "title"
    },
    {
      "type": "text",
      "id": "i_desc",
      "label": "desc"
    }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two grid"
    
    }
  ]
}
{% endschema %}