  <style>
section.shero-simple {
    position: relative;
}
.shero-content {
    color: #fff;
    position: absolute;
    bottom: 9.5625rem;
    width: 100%;
    left: 0;
    text-align: center;
}
p.shero-subtitle {
    font-weight: 500;
    margin: 0;
    font-size: 1.875rem;
    line-height: 2.1875rem;
    color: rgb(255 255 255 / 50%);
}
.shero-title {
    margin: 2.25rem 0 4.75rem;
    font-size: 5.625rem;
    line-height: 5.75rem;
    font-weight: 600;
}
p.shero-eyebrow {
    margin: 0;
    font-size: 2.1875rem;
    line-height: 1;
      font-weight: 500;
}
    @media (max-width: 768px) {
      p.shero-eyebrow {
          font-size: 15.5px;
          line-height: 20px;
      }
    .shero-title {
        margin: 18px 0 28.5px;
        font-size: 40px;
        line-height: 40.5px;
      
    }
    p.shero-subtitle {
      font-size: 15.5px;
      line-height: 19px;
            max-width: 272px;
        margin: auto;
  }
  p.shero-subtitle  br{
    display:none
  }
  .shero-content {
    bottom: 53px;
  }
    }
  </style>
<section class="shero-simple">
        <img class="desktop-img" src="{{ section.settings.image | img_url:'master' }}">
        <img class="mobile-img" src="{{ section.settings.mobile_image | img_url:'master' }}">

  <div class="shero-overlay"></div>

  <div class="shero-content">
    <p class="shero-eyebrow space-thin wow fadeInUp">{{ section.settings.eyebrow }}</p>
    <h2 class="shero-title space-thin wow fadeInUp">{{ section.settings.title }}</h1>
    <p class="shero-subtitle space-thin wow fadeInUp">{{ section.settings.subtitle }}</p>
  </div>


</section>

{% schema %}
{
  "name": "Hero Simple",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Background image" },
    { "type": "image_picker", "id": "mobile_image", "label": "Mobile Background image" },
    { "type": "text", "id": "alt_text", "label": "Image alt" },
    { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "Tailored clarity, wherever you are" },
    { "type": "textarea", "id": "title", "label": "Title", "default": "Smart hearing for every scene" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Three scene modes, integrated into our enhanced noise reduction system, are optimized for everyday use." }
  ],
  "presets": [
    { "name": "Hero Simple" }
  ]
}
{% endschema %}