<style>
    .icon_list-section .section{
        padding-top: 9.0625rem;
       padding-bottom: 10.875rem;
    }
    .icon_list-head {
    text-align: center;
    margin-top: 0;
        margin-bottom: 6.4375rem;
}
.icon_list-head h2{
    margin: 0;
    margin-bottom: 2.5rem;
    font-size: 4.125rem;
    line-height: 4.5rem;
}
.icon_list-head p{
    font-size: 1.5625rem;
    max-width: 45rem;
    margin: 0 auto;
    line-height: 1.75rem;
   color: rgba(24, 24, 24, 0.5);
    font-family: Outfit;
    font-weight: 500;
}
    .icon_list-section{
        background: #F6F6F6;
           
    }
.icon-lists {
    display: flex;
    justify-content: space-between;
        gap: 0.75rem;
}
.icon__item{
    border-radius: 20px;
    background: #fff;
    padding: 35px;
        width: 100%;
            height: 316px;
        position: relative;
    }
    .i-title{
        font-size: 1.875rem;
            line-height: 2rem;
    font-weight: 600;
        margin:  1.5625rem 0 1.25rem;
}
   .i-title p{
    margin: 0;
    line-height: 1.1;
    color: #181818;
}
.i-desc p {
    margin: 0;
    line-height: 1.4375rem;
    color: #181818;
    font-size: 1.25rem;
    font-weight: 300;
    font-family: Outfit;
}
i.ok_icon {
    background: url(https://cdn.shopify.com/s/files/1/0552/4891/2483/files/3268_1x_32d5b02d-66cd-4d5c-ab66-56cae25b6eac.png?v=1758706614);
    width: 2rem;
    height: 2rem;
    background-size: cover;
    display: block;
    margin: 2.3125rem 0 0;
        position: absolute;
    right: 1.5rem;
    bottom: 1.25rem;
}
 @media (max-width: 768px) {
    .icon-lists {
        display: grid;
        gap: 5px;
        grid-template-columns: repeat(2, 1fr);
    }
    .icon__item {
        border-radius: 15px;
        padding: 17px 12.5px;
        height: auto;
        padding-bottom: 40px;
    }
    .icon__item img {
        height: 21.5px;
    }
    .i-title {
        font-size: 13px;
        margin: 14px 0 8.5px;
    }
     .i-desc{
         line-height: 1;
    }
    .i-desc p {
font-size: 12px;
        display: inherit;
        margin-right: 0;
        line-height: 13px;
    }
    i.ok_icon {
        width: 14px;
        height: 14px;
        right: 13px;
        bottom: 16px;
    }
    .icon_list-head p {
         font-size: 17.5px;
        max-width: 278.8px;
        line-height: 19px;
    }
    .icon_list-head h2 {
        margin-bottom: 30.5px;
            font-size: 40px;
        line-height: 40.5px;
    }
    .icon_list-head {
        margin-top: 0;
        margin-bottom: 47.5px;
    }
    .icon_list-section .section {
    padding-top: 61px;
    padding-bottom: 41.5px;
}
}
</style>

<section class="perf-opt icon_list-section" id="{{ section.settings.custom_id }}">
    <div class="perf-opt section">
        <div class="perf-opt icon_list-head">
            <h2 class="perf-opt h1 space-thin wow fadeInUp">{{ section.settings.title }}</h2>
            <p class="perf-opt space-thin wow fadeInUp" data-wow-delay=".1s">{{ section.settings.subtitle }}</p>
        </div>
        <div class="perf-opt iicon_list-wrapper">
              {% if section.blocks.size > 0 %}
            <div class="perf-opt icon-lists">
            {% for block in section.blocks %}
                <div class="perf-opt icon__item" {{ block.shopify_attributes }}>
                    <img src="{{ block.settings.icon | img_url:'master' }}" />
                    <div>
                        <div class="perf-opt i-title space-thin">{{ block.settings.i-title }}</div>
                        <div class="perf-opt i-desc space-thin">{{ block.settings.desc }}</div>
                        <i class="perf-opt ok_icon"></i>
                    </div>
                </div>
            {% endfor %}
            </div>
        {% endif %}
        </div>
    </div>
</section>
{% schema %}
{
  "name": "Four grid",
  "settings": [
    {
      "type": "text",
      "id": "custom_id",
      "label": "ID"
    },
     {
      "type": "text",
      "id": "title",
      "label": "title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "subtitle"
    }
   
  ],
     "blocks": [
    {
      "type": "item",
      "name": "item",
      "settings": [
        { 
            "type": "image_picker", 
            "id": "icon", 
            "label": "Icon" 
        },
        {
             "type": "richtext", 
             "id": "i-title", 
             "label": "Title",
            },
        { 
            "type": "richtext", 
            "id": "desc", 
            "label": "Description"
            }
      ]
    }
  ],
  "presets": [
    {
      "name": "Four grid"
    }
  ]
}
{% endschema %}