<style>
.image_text-section {
    margin-bottom: 0;
}
.image_text-section .section{
    padding-top: 14.375rem;
}
.image_text-section .section{
  padding-bottom:11rem
}
.img_head h2 {
    margin: 0;
    line-height: 1;
    margin-bottom: 4.6875rem;
    font-size:4.375rem;
        color: rgba(24, 24, 24, 0.898);
    font-weight: 600;
}
.image_text-wrapper {
    position: relative;
}
.image_text-content {
    position: absolute;
    top: 0;
    left: 0;
    padding: 3.75rem;
    color: #fff;
}
.image_text-content h3 {
    margin: 0;
    margin-bottom:1.4375rem;
    font-size: 1.5625rem;
    line-height: 1;
     font-weight: 500;
  
}
.text-dark.image_text-content h3{
    color: rgba(24, 24, 24, 0.898);
}
.imgge_text-desc p {
    font-size: 1.5625rem;
    margin: 0;
    line-height: 1.75rem;
     font-weight: 500;
}
.imgge_text-desc {
}
.image_text-content.text-dark {
color: rgba(24, 24, 24, 0.898);
}
.image_text-content.text-dark .imgge_text-desc p{
  color: rgba(24, 24, 24, .5);
}
.image_text-content.text-white .imgge_text-desc p{
  color: rgb(255 255 255 / 50%)
}
.image_text-content.text-white .imgge_text-desc p strong{
    color: #fff;
  }
  #Sterilization .section{
  padding-top: 20px!important;
}

 @media (max-width: 768px) {
  .image_text-content {
    position: relative;
    padding: 0;
    text-align: center;
    margin-top: 30px;
  }
  .image_text-content h3 {
    font-size: 20px;
    margin-bottom:0
  }
  .imgge_text-desc {
    line-height: 1;
}
  .imgge_text-desc p {
    display:inline;
    font-size: 15.5px;
    line-height:19px;
    color: rgba(0, 0, 0, 0.5)!important;
    padding-right:2px
  }
  .imgge_text-desc {
    margin-top: 10px;
  }
  .img_head h2 {
    margin-bottom: 28px;
    font-size:40px;
    line-height:40.5px
}
.image_text-section {
    margin-bottom: 0;
}
.image_text-content.text-white .imgge_text-desc p strong {
    color: rgba(0, 0, 0, 0.5);
}
.image_text-section .section {
    padding-bottom: 80px;
        padding-top: 0;
}
}
</style>

<section class="perf-opt image_text-section sec-{{ section.id }}" id="{{ section.settings.custom_id }}">
    <div class="perf-opt section">
        <div class="perf-opt img_head">
            <h2 class="perf-opt h1 space-thin wow fadeInUp">{{ section.settings.title }}</h2>
        </div>
        <div class="perf-opt image_text-wrapper">
            <img class="perf-opt desktop-img" src="{{ section.settings.image | img_url:'master' }}">
            <img class="perf-opt mobile-img" src="{{ section.settings.mobile_image | img_url:'master' }}">
            <div class="perf-opt image_text-content text-{{ section.settings.color }}">
                <h3 class="perf-opt space-thin">{{ section.settings.i-title }}</h3>
                <div class="perf-opt imgge_text-desc space-thin">{{ section.settings.desc }}</div>
            </div>
        </div>
    </div>
</section>
{% schema %}
{
  "name": "Background with text",
  "settings": [
    {
      "type": "text",
      "id": "custom_id",
      "label": "ID"
    },
     {
      "type": "text",
      "id": "title",
      "label": "title"
    },
   
   
    {
      "type": "image_picker",
      "id": "image",
      "label": "image"
    },
      {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "mobile image"
    },
    {
      "type": "text",
      "id": "i-title",
      "label": "image title"
    },
    {
      "type": "richtext",
      "id": "desc",
      "label": "desc"
    },
   
     {
      "type": "select",
      "id": "color",
      "label": "text colot",
      "options": [
        {
          "value": "dark",
          "label": "dark"
        },
        {
          "value": "white",
          "label": "white"
        }
      ],
      "default": "dark"
    }
  ],
  "presets": [
    {
      "name": "Background with text"
    }
  ]
}
{% endschema %}