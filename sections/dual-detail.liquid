    { "type": "image_picker", "id": "row1_left_image", "label": "Row 1 - Left image" },
    { "type": "image_picker", "id": "row1_right_image", "label": "Row 1 - Right small image" },
    { "type": "richtext", "id": "row1_text", "label": "Row 1 - Right text", "default": "<p>From music to calls, experience stable, lowâ€‘lag audio thanks to advanced Bluetooth streaming. Stay connected to two devices at once and enjoy uninterrupted sound across all your daily moments.</p>" },

    { "type": "text", "id": "row2_left_title", "label": "Row 2 - Left title", "default": "Universal compatibility" },
