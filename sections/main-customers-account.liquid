<div class="perf-opt container">
  {%- if customer.orders.size == 0 -%}
    <div class="perf-opt empty-state">
      <div class="perf-opt empty-state__icon-wrapper">
        {%- render 'icon' with 'picto-box', width: 32, height: 32, stroke_width: 1 -%}
        <span class="perf-opt count-bubble count-bubble--lg">0</span>
      </div>

      <div class="perf-opt prose">
        <p class="perf-opt h6">{{ 'customer.account.no_orders' | t }}</p>

        {%- assign button_content = 'customer.account.continue_shopping' | t -%}
        {%- render 'button', href: routes.all_products_collection_url, size: 'xl', content: button_content -%}
      </div>
    </div>
  {%- else -%}
    <div class="perf-opt page-spacer">
      <div class="perf-opt account">
        <div class="perf-opt account-header">
          <div class="perf-opt text-with-bubble justify-self-center">
            <h1 class="perf-opt h3">{{ 'customer.account.orders' | t }}</h1>
            <span class="perf-opt count-bubble count-bubble--lg">{{ customer.orders.size }}</span>
          </div>
        </div>

        {%- paginate customer.orders by 16 -%}
          <div class="perf-opt account__block-list">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when '@app' -%}
                  {%- render block -%}

                {%- when 'liquid' -%}
                  {%- if block.settings.liquid != blank -%}
                    <div {{ block.shopify_attributes }}>
                      {{ block.settings.liquid }}
                    </div>
                  {%- endif -%}

                {%- when 'orders' -%}
                  <div class="perf-opt v-stack gap-5" {{ block.shopify_attributes }}>
                    <div class="perf-opt order-grid-list">
                      {%- for order in customer.orders -%}
                        <div class="perf-opt order-grid-item rounded-sm">
                          <p class="perf-opt h5">{{ 'customer.order.order_name' | t: name: order.name }}</p>

                          <div class="perf-opt order-grid-item__categories">
                            <div class="perf-opt v-stack gap-1">
                              <p class="perf-opt bold">{{ 'customer.order.date' | t }}</p>
                              <p class="perf-opt text-subdued">{{ order.created_at | date: format: 'date' }}</p>
                            </div>

                            <div class="perf-opt v-stack gap-1">
                              <p class="perf-opt bold">{{ 'customer.order.fulfillment_status' | t }}</p>
                              <p class="perf-opt text-subdued">{{ order.fulfillment_status_label }}</p>
                            </div>

                            <div class="perf-opt v-stack gap-1">
                              <p class="perf-opt bold">{{ 'customer.order.payment_status' | t }}</p>
                              <p class="perf-opt text-subdued">{{ order.financial_status_label }}</p>
                            </div>

                            <div class="perf-opt v-stack gap-1">
                              <p class="perf-opt bold">{{ 'customer.order.total' | t }}</p>
                              <p class="perf-opt text-subdued">{{ order.total_net_amount | money }}</p>
                            </div>
                          </div>

                          {%- capture button_label -%}{{ 'customer.order.view_details' | t }}{%- endcapture -%}
                          {%- render 'button', href: order.customer_url, content: button_label, secondary: true, stretch: true -%}
                        </div>
                      {%- endfor -%}
                    </div>

                    <table class="perf-opt order-table-list">
                      <thead>
                        <tr>
                          <th>{{ 'customer.order.order' | t }}</th>
                          <th>{{ 'customer.order.date' | t }}</th>
                          <th>{{ 'customer.order.payment_status' | t }}</th>
                          <th>{{ 'customer.order.fulfillment_status' | t }}</th>
                          <th class="perf-opt text-end">{{ 'customer.order.total' | t }}</th>
                        </tr>
                      </thead>

                      <tbody>
                        {%- for order in customer.orders -%}
                          <tr class="perf-opt table-row-hover" onclick="window.location.href = '{{ order.customer_url }}'">
                            <td class="perf-opt bold">{{ order.name }}</td>
                            <td class="perf-opt text-subdued">{{ order.created_at | date: format: 'date' }}</td>
                            <td class="perf-opt text-subdued">{{ order.financial_status_label }}</td>
                            <td class="perf-opt text-subdued">{{ order.fulfillment_status_label }}</td>
                            <td class="perf-opt text-subdued text-end">{{ order.total_net_amount | money }}</td>
                          </tr>
                        {%- endfor -%}
                      </tbody>
                    </table>

                    {%- render 'pagination', paginate: paginate -%}
                  </div>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        {%- endpaginate -%}
      </div>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Customer account",
  "class": "shopify-section--main-customers-account",
  "tag": "section",
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "liquid",
      "name": "Liquid",
      "settings": [
        {
          "type": "liquid",
          "id": "liquid",
          "label": "Liquid"
        }
      ]
    },
    {
      "type": "orders",
      "name": "Order list",
      "limit": 1
    }
  ]
}
{% endschema %}