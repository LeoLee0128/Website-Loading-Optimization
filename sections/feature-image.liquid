<section id="feature-spot-{{ section.id }}" class="feature-spot" data-section-id="{{ section.id }}">


  <div class="wrap" id="{{ section.settings.custom_id }}">
  

    <div class="visual">
          <header class="heading">
                <h2 class="title space-thin wow fadeInUp">{{ section.settings.title }}</h2>
                <p class="subtitle space-thin wow fadeInUp" data-wow-delay=".1s">{{ section.settings.subtitle }}</p>
            </header>
      {% assign img = section.settings.image_desktop | default: section.settings.image_mobile %}
      <picture>
        {% if section.settings.image_mobile %}
          <source media="(max-width: 768px)" srcset="{{ section.settings.image_mobile | image_url: width: 1200 }}">
        {% endif %}
        {% if img %}
          {{ img | image_url: width: 2400 | image_tag: alt: section.settings.title }}
        {% endif %}
      </picture>

      {% if section.settings.hotspot_enable %}
        {% assign hs_x = section.settings.hotspot_x | default: 50 %}
        {% assign hs_y = section.settings.hotspot_y | default: 50 %}
        {% assign hs_angle = section.settings.hotspot_line_angle | default: -65 %}
        <div class="hotspot" style="left: {{ hs_x }}%; top: {{ hs_y }}%;">
          <span class="dot"></span>
          <span class="line" style="transform: rotate({{ hs_angle }}deg);"></span>
          <div class="label">
           
            {% if section.settings.hotspot_text != blank %}
              <div class="label-desc space-thin">{{ section.settings.hotspot_text }}</div>
            {% endif %}
          </div>
        </div>
      {% endif %}

        {% if section.blocks.size > 0 %}
    <div class="features">
      {% for block in section.blocks %}
        <div class="feature wow fadeInUp" {{ block.shopify_attributes }} data-wow-delay=".{{ forloop.index }}s">
          <div class="icon">
            {% if block.settings.icon != blank %}
              {{ block.settings.icon | image_url: width: 64 | image_tag: loading: 'lazy', alt: block.settings.title }}
            {% else %}
              <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><circle cx="12" cy="12" r="9"></circle><path d="M12 7v5l3 3"></path></svg>
            {% endif %}
          </div>
          <div>
            <p class="f-title space-thin">{{ block.settings.title }}</p>
            <p class="f-desc space-thin">{{ block.settings.desc }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}

    </div>

    

  </div>
</section>
<script>
    $(document).ready(function() {
        var $subtitle = $('.visual .subtitle');
        
        $(window).on('scroll', function() {
            var scrollTop = $(window).scrollTop();
            var subtitleTop = $subtitle.offset().top;
            
            if (scrollTop > subtitleTop) {
                $('.wrap').addClass("is-active")
               
            } else {
               $('.wrap').removeClass("is-active")
            }
        });
    });
</script>
